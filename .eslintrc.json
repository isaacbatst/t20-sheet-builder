{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["xo"],
    "plugins": ["import"],
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {
                "@typescript-eslint/no-extraneous-class": ["error", {  "allowStaticOnly": true }],
                "@typescript-eslint/ban-types": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/no-cycle": "error"
    }
}
